{
  "name": "expressive",
  "version": "0.0.1",
  "description": "A Lisp syntax for JavaScript",
  "author": "Paul Fernandez",
  "license": "ISC",
  "type": "module",
  "keywords": ["javascript", "lisp"],
  "homepage": "https://github.com/pfernandez/expressive#readme",
  "bugs": { "url": "https://github.com/pfernandez/expressive/issues" },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pfernandez/expressive.git"
  },

  "main": "server.js",
  "scripts": {
    "start": "nodemon --ignore src"
  },

  "devDependencies": {
    "connect-livereload": "^0.6.1",
    "eslint": "^7.32.0",
    "express": "^4.17.1",
    "livereload": "^0.9.3",
    "nodemon": "^2.0.14"
  },

  "eslintConfig": {
    "root": true,
    "parserOptions": { "ecmaVersion": "latest", "sourceType": "module" },
    "env": { "browser": true, "es2021": true },
    "extends": ["eslint:recommended"],

    "rules": {
      "array-bracket-newline": ["warn", "never"],
      "arrow-parens": ["warn", "as-needed"],
      "comma-spacing": ["warn", { "before": false, "after": true }],
      "comma-style": ["warn", "last"],
      "computed-property-spacing": ["warn", "never"],
      "eol-last": ["warn", "always"],
      "indent": ["warn", 2, {
        "ImportDeclaration": "first",
        "VariableDeclarator": { "var": 2, "let": 2, "const": 3 }
      }],
      "key-spacing": ["warn", { "align": "value"}],
      "linebreak-style": ["error", "unix"],
      "no-extra-parens": "warn",
      "no-multiple-empty-lines": ["warn", { "max": 2, "maxEOF": 1 }],
      "no-multi-spaces": ["warn", {
        "ignoreEOLComments": true,
        "exceptions": { "Property": true }
      }],
      "no-trailing-spaces": "warn",
      "no-undef": "off",
      "no-unused-vars": ["warn", { "args": "all", "argsIgnorePattern": "^_" }],
      "object-curly-newline": ["warn", {
        "ObjectExpression": "consistent",
        "ObjectPattern": "consistent",
        "ImportDeclaration": "never",
        "ExportDeclaration": "always"
      }],
      "object-curly-spacing": ["warn", "never"],
      "operator-linebreak": ["warn", "before"],
      "prefer-rest-params": "warn",
      "quote-props": ["warn", "as-needed"],
      "quotes": ["warn", "single"],
      "semi": ["warn", "never"],
      "space-before-function-paren": ["warn", {
        "anonymous": "never",
        "asyncArrow": "always",
        "named": "never"
      }],
      "spaced-comment": ["warn", "always"],
      "space-in-parens": "warn"
    }
  }
}
